{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"parser": "@babel/eslint-parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
    "rules": {
		"curly": 2,
		"eqeqeq": 2,
		"new-cap": 2,
		"no-caller": 2,
		"no-empty": 2,
		"no-new": 2,
		"dot-notation": 0,
		"no-undef": 2,
		"no-unused-vars": 2,
		"no-cond-assign": [
			2,
			"except-parens"
		],
		"no-eq-null": 2,
		"strict": [
			2,
			"function"
		],
		"wrap-iife": [
			2,
			"any"
		],
		"no-unused-expressions": 2,
		"no-use-before-define": [
			2,
			{
				"functions": false
			}
		],
		"quotes": [
			2,
			"single"
		],
		"no-invalid-this": 2,
		"indent": [
			2,
			2,
			{
				"SwitchCase": 1
			}
		]
	}
}