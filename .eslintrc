{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
  "parser": "@babel/eslint-parser",
	"parserOptions": {
    "requireConfigFile": false,
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
  "rules": {
		"curly": 1,
		"eqeqeq": 1,
		"new-cap": 1,
		"no-caller": 1,
		"no-empty": 1,
		"no-new": 1,
		"dot-notation": 0,
		"no-undef": 1,
		"no-unused-vars": 1,
		"no-cond-assign": [
			1,
			"except-parens"
		],
		"no-eq-null": 1,
		"strict": [
			1,
			"function"
		],
		"wrap-iife": [
			1,
			"any"
		],
		"no-unused-expressions": 1,
		"no-use-before-define": [
			1,
			{
				"functions": false
			}
		],
		"quotes": [
			1,
			"single"
		],
		"no-invalid-this": 1,
		"indent": [
			2,
			2,
			{
				"SwitchCase": 1
			}
		]
	}
}
